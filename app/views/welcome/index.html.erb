<div>
  <h1 class="font-bold text-4xl">Slow Blog Dashboard</h1>
  <% @posts.each do |post| %>
    <div class="border border-gray-200 p-4 my-4">
      <h2 class="font-bold text-xl"><%= link_to post.title, post %></h2>
      <p><%= post.body %></p>
      <p>コメント: <%= post.comments.count %></p>
      <%= render post.comments %>
    </div>
  <% end %>
  <div>
    <% if @page.prev_page %>
      <%= link_to "Prev Page", root_path(page: @page.prev_page) %>
    <% end %>
    <% if @page.next_page %>
      <%= link_to "Next Page", root_path(page: @page.next_page) %>
    <% end %>
  </div>
</div>
